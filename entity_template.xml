
<?xml version="1.0" encoding="UTF-8"?>

<!--XQuery, XPath, and C# will come into play after this/these files-->

<!--Store media as folder, each category of entity goes in as xml file-->
<media>

	<media_info>
		<type></type>
		<title></title>
		<authors>
			<author></author>
		</authors>
		<image_link></image_link>
		<publish_year></publish_year>
		<summary></summary>
		<media_number></media_number>
		<chapters>
			<chapter>
				<title></title>
				<summary></summary>
				<image_link></image_link>
			</chapter>
		</chapters>
		<pages></pages>
	</media_info>

	<characters>

		<character>
			<name></name>
			<physical_description></physical_description>
			<image_link></image_link>

			<father></father>
			<mother></mother>
			<gender></gender>
			<race></race>
			<religion></religion>
			
			<significant_others>
				<significant_other>
					<name></name>
					<current></current>
				</significant_other>
			</significant_others>
			
		</character>

	</characters>

	<places>

		<place name="">
			<physical_description></physical_description>
			<image_link></image_link>
			<type></type>
			<ruler></ruler>
		</place>

	</places>

	<events>
		
		<event>
			<name></name>
			<summary></summary>
			<image_link></image_link>
			<location></location>
			<date></date>
			<chapter></chapter>
			<participants>
				<participant></participant>
			</participants>

		</event>

	</events>

	<notes>
		
		<note></note>

	</notes>


</media>