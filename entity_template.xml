<?xml version="1.0" encoding="UTF-8"?>

<!--XQuery, XPath, and C# will come into play after this/these files-->

<!--Store media as folder, each category of entity goes in as xml file-->
<media>

	<media_info>
		<type></type>
		<title></title>
		<authors>
			<author></author>
		</authors>
		<image_link></image_link>
		<publish_year></publish_year>
		<summary></summary>
		<series></series>
		<chapter_units>
			<chapter_unit>
				<title></title>
				<summary></summary>
			</chapter_unit>
		</chapter_units>
	</media_info>

	<characters>

		<character>
			<name></name>
			<physical_description></physical_description>
			<image_link></image_link>
			<gender></gender>
			<race></race>			
		</character>

	</characters>

	<character_relationships>
		<character_relationship>
			<character></character>
			<character></character>
			<title></title>
		</character_relationship>
	</character_relationships>

	<locations>

		<location>
			<name></name>
			<physical_description></physical_description>
			<image_link></image_link>
			<type></type>
			<subtype></subtype>
		</location>

	</locations>

	<events>
		
		<event>
			<name></name>
			<summary></summary>
			<image_link></image_link>
			<location></location>
			<date></date>
			<!-- page, episode, etc. -->
			<unit_date></unit_date>
			<participants>
				<participant></participant>
			</participants>

		</event>

	</events>

	<event_relationships>

		<event_relationship>
			<!-- before after -->
			<event></event>
			<event></event>
		</event_relationship>

	<general_notes>
		
		<general_note></general_note>

	</general_notes>


</media>